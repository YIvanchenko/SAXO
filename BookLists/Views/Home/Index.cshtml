@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    @Scripts.Render("~/bundles/knockout")
    <script type="text/javascript">
        $(function () {
            $.getJSON('/api/booklist', function (bookLists) {
                ko.applyBindings(bookLists);
            });
        });
    </script>
}

<div class="row" data-bind="foreach: $root">
    <div class="col-md-12" style="padding-top: 15px;">
        <div style="padding: 10px;overflow: auto;background-color: rgb(221, 221, 221);">
            <h2 data-bind="text: Title"></h2>
            <!-- ko foreach: Books -->
            <div style="display: inline-block;padding-top: 10px;" class="col-md-2">
                <div style="padding: 5px;height:410px;">
                    <h4 data-bind="text: $data.SaxoId"></h4>
                    <p data-bind="text: 'ISBN:' + $data.ISBN"></p>
                    <img data-bind="attr: { 'src': $data.ImageURL }" alt="Front cover" style="width: 100%;">                    
                    <p data-bind='text: $data.Title'></p>
                    <p data-bind="text: $data.Price"></p>
                </div>
            </div>
            <!-- /ko -->
        </div>
    </div>
</div>
